{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-and-run-raylib",
            "type": "shell",
            "command": "cd ${workspaceFolder} && mkdir -p build && cd build && cmake .. && make && ./main",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}