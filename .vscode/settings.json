{
    "code-runner.executorMap": {
        "cpp": "cd $workspaceRoot && mkdir -p build && cd build && cmake .. && make && ./main",
        "c": "cd $workspaceRoot && mkdir -p build && cd build && cmake .. && make && ./main"
